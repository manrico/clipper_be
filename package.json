{
  "name": "clipper-be",
  "version": "0.0.1",
  "description": "Clipper platform backend",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:migrate": "node -e \"require('./dist/db/migrate')\"",
    "db:migrate:dev": "ts-node src/db/migrate.ts"
