    "@fastify/jwt": "^8.0.1",
    "@fastify/sensible": "^5.6.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "fastify-plugin": "^4.5.1",
    "mysql2": "^3.17.1",
    "nodemailer": "^6.9.15",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.5.1",
    "@types/nodemailer": "^6.4.16",
    "@types/uuid": "^10.0.0",
    "pino-pretty": "^11.2.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  }
