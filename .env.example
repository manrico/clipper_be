# Server
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:5173

# Database
DB_HOST=localhost
DB_NAME=clipper
DB_USER=root
DB_PASS=

# JWT
JWT_SECRET=change-this-to-a-long-random-string-in-production
JWT_EXPIRES_IN=7d

# Feature flags
# Set to 'false' to skip email verification (useful for local dev/testing)
EMAIL_VERIFICATION_ENABLED=true

# Email â€” Resend (https://resend.com)
# SMTP_USER must be the literal string "resend"
# SMTP_PASS is your Resend API key (re_xxxx...)
# SMTP_FROM use onboarding@resend.dev for testing, or your verified domain in production
SMTP_HOST=smtp.resend.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=resend
SMTP_PASS=re_your_api_key_here
SMTP_FROM=onboarding@resend.dev
